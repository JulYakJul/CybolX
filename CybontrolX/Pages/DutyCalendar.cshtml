@page
@model CybontrolX.Pages.DutyCalendarModel
@{
    ViewData["Title"] = "График дежурств";
}

<!-- Подключите стили FullCalendar -->
<link href="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.css" rel="stylesheet" />

<h1>График дежурств</h1>

<div class="d-flex justify-content-between mb-3">
    <a href="/CreateDutyCalendar" class="btn btn-primary">Создать график</a>
</div>

<div id="calendar"></div>

@section Scripts {
    <!-- Подключаем FullCalendar JS -->
    <script src="https://cdn.jsdelivr.net/npm/fullcalendar@5.11.3/main.min.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var calendarEl = document.getElementById('calendar');

            // Вывод JSON-событий в консоль для отладки
            console.log(@Html.Raw(Model.EventsJson));

            var calendar = new FullCalendar.Calendar(calendarEl, {
                initialView: 'dayGridMonth',
                locale: 'ru',
                events: @Html.Raw(Model.EventsJson),
                eventTimeFormat: { // Формат отображения времени (если понадобится)
                    hour: '2-digit',
                    minute: '2-digit',
                    meridiem: false
                }
            });

            calendar.render();
        });
    </script>
}
