@page
@model CybontrolX.Pages.EditDutyCalendarModel
@{
    ViewData["Title"] = "Редактирование графика дежурств";
}

<h1>Редактирование графика дежурств</h1>

<form method="post">
    <div class="mb-3">
        <label for="EmployeeId" class="form-label">Выберите сотрудника:</label>
        <select asp-for="EmployeeId" class="form-control" required asp-items="@(new SelectList(Model.Employees, "Id", "Surname"))" onchange="updateDutyDates()">
            <option value="">Выберите сотрудника</option>
        </select>
    </div>

    <div class="mb-3">
        <label for="ShiftType" class="form-label">Тип смены:</label>
        <select asp-for="ShiftType" id="ShiftType" class="form-control" required>
            <option value="">Выберите тип смены</option>
            <option value="Дневная">Дневная</option>
            <option value="Ночная">Ночная</option>
            <option value="Другое">Другое</option>
        </select>
    </div>

    <div class="mb-3">
        <label class="form-label">Выберите даты и время дежурств:</label>
        <input type="text" id="dutyDates" name="DutyDates" class="form-control" value="@Model.DutyDates" required />
    </div>

    <div class="mb-3">
        <label for="ShiftStart" class="form-label">Начало смены:</label>
        <input type="time" asp-for="ShiftStart" class="form-control" required />
    </div>

    <div class="mb-3">
        <label for="ShiftEnd" class="form-label">Конец смены:</label>
        <input type="time" asp-for="ShiftEnd" class="form-control" required />
    </div>

    <button type="submit" class="btn btn-primary">Сохранить изменения</button>
</form>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css">
    <script src="https://cdn.jsdelivr.net/npm/flatpickr"></script>
    <script src="https://cdn.jsdelivr.net/npm/flatpickr/dist/l10n/ru.js"></script>

    <script>
                        document.addEventListener('DOMContentLoaded', function () {
            initializeFlatpickr();
        });

        function initializeFlatpickr(dates = []) {
            flatpickr("#dutyDates", {
                mode: "multiple",
                dateFormat: "Y-m-d",
                locale: "ru",
                minDate: "today",
                allowInput: true,
                defaultDate: dates
            });
        }

        function updateDutyDates() {
            var employeeId = document.getElementById('EmployeeId').value;
            var shiftType = document.getElementById('ShiftType').value;

            if (employeeId) {
                fetch(`/EditDutyCalendar?employeeId=${employeeId}&shiftType=${shiftType}`, {
                    headers: {
                        'X-Requested-With': 'XMLHttpRequest'
                    }
                })
                .then(response => response.json())
                .then(data => {
                    let flatpickrInstance = flatpickr("#dutyDates");
                    if (flatpickrInstance) {
                        flatpickrInstance.destroy();
                    }

                    initializeFlatpickr(data.dutyDates.split(','));
                })
                .catch(error => {
                    console.error('Error fetching duty dates:', error);
                    alert('Произошла ошибка при загрузке данных. Пожалуйста, попробуйте еще раз.');
                });
            }
        }

        document.getElementById('ShiftType').addEventListener('change', updateDutyDates);
    </script>
}
